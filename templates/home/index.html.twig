{% extends "base.html.twig" %}

{% block title %} Home title {% endblock %}

{% block body %}

<h1>page title</h1>

<div class="row">
    {% for publication in publications %}
        <div class="card col-md-4" style="width: 18rem;">
            <p class="date">{{ publication.createdAt | date("d/m/Y") }}</p>
            <img src="{{ publication.image }}" class="card-img-top" alt="{{ publication.title }}">
            <div class="card-body">
                <h5 class="card-title">{{ publication.title }}</h5>
                <a href="{{ path('show', {'id': publication.id}) }}" class="btn btn-primary">More</a>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}